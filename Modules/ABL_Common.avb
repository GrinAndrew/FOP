Sub	com_BubbleSortDictKeys(Arr, dDict, Mode)
	Dim j, i, tmp, n
 
	n = UBound(Arr)
	For i = 0 To n - 1
		For j = i + 1 To n
			If dDict(Arr(i)) > dDict(Arr(j)) Then 
				Tmp = Arr(i) 
				Arr(i) = Arr(j) 
				Arr(j) = Tmp 
			End If 
		Next
	Next
