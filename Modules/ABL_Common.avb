Sub com_CurrencyInit(Op, TrNo)
	Dim TrCurs

	With Op.TransList(TrNo)
		.SetLockRate False
		Set TrCurs = .Item(1).TransCurs(1)
		If TrCurs.CurID = 0 Then .SetCur 1, 1

		If Op.IsNew Then 
			If .Rows = 1 Then 
				.SetRate 1, 1
			Else
				.EnumTrans GetRef("com_InitRateRow"), TrCurs
			End If
		ElseIf TrCurs.Rate = 0 Then 
			.SetRate TrCurs.CurID, 1
		End If
	End With
