Function com_strzero(num, n)
	Dim numstr

	numstr = CStr(num)

	If Len(numstr) < n Then
		com_strzero = String(n - Len(numstr), "0") & numstr
	ElseIf Len(numstr) > n Then
		com_strzero = Left(numstr, n)
	Else
		com_strzero = numstr
	End If
End Function
