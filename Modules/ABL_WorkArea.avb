Function AddTmlScriptVat(TmlGetScript)
	Dim AddStr, FindStr, Pos

	AddStr = "If isfileexists(""ABL_CalcVat.avb"") Then App.RunModule ""ABL_CalcVat.avb"", ""CalcVat"", op"
	FindStr = "Sub Template_OnRecalc(op)"

	If InStr(TmlGetScript, AddStr) = 0 Then
		Pos = InStr(TmlGetScript, FindStr)
		If Pos > 0 Then
			Pos = Pos + Len(FindStr)
			AddTmlScriptVat = Left(TmlGetScript, Pos - 1) & vbNewLine & vbCrLf & _
				vbTab & AddStr & vbNewLine & Mid(TmlGetScript, Pos)	
		Else
			AddTmlScriptVat = TmlGetScript & vbNewLine & _
				FindStr & vbNewLine & vbCrLf & _
				vbTab & AddStr & vbNewLine & _
				"	'{{ BEGIN_RECALC" & vbNewLine & _
				"	'}} END_RECALC" & vbNewLine & _
				"End Sub" & vbNewLine
		End If
	Else 
		AddTmlScriptVat = TmlGetScript
	End If
End Function

