Function DeleteElemRecurse(Root, Kind)
	Dim i, Flag
	
	Flag = True

	For i = 1 To Root.Count
		With Root.Item(i)
			If .HasChildren Then
				Flag = DeleteElemRecurse(.Children, kind)
				If Not Flag Then Exit For
			End If

			If Kind = acAgent Or _
				Kind = acEntity Or _
				Kind = acMisc Then
					If Not .CanDelete Then Exit Function
			End If

			Flag = Workarea.RemoveElem(Kind, .ID)
		End With

		If Not Flag Then Exit For
	Next

	DeleteElemRecurse = flag
End Function
