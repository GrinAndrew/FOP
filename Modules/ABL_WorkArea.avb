Sub ABL_OnTemplateScriptChanged
	Dim IsChanged, TmlCashe
	Dim ID, TextScript

	ID = Workarea.Map("KindID")

	With WorkArea.Template(ID)
		If .Type <> 0 Then
			TextScript = .GetScript
			TextScript = Replace(TextScript, "Name2", "Name")

			IsChanged = False

			ABL_CheckTML TextScript

			TextScript = AddTmlScriptVat(TextScript)
			TextScript = TestTemplate(TextScript, .ID, IsChanged)

			If Workarea.Map.Exists("TmlCashe") Then
				Set TmlCashe = Workarea.Map.Item("TmlCashe")

				If Not TmlCashe.Exists(ID) Then
					TmlCashe.Add ID, UCase(TextScript)
				Else
					TmlCashe.Item(ID) = UCase(TextScript)
				End If

				Set Workarea.Map.Item("TmlCashe") = TmlCashe
			End If

			If .Params.Exists("Изменен") Then .Params("Изменен").Value = Now
			.SetScript TextScript
			.Save

		End If
	End With
End Sub
